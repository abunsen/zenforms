<%= simple_form_for @form do |f| %>
    <%= f.input :name %>
    <%= f.input :ssn %>
    <%= f.input :address_street %>
    <%= f.input :address_city %>
    <%= f.input :address_state %>
    <%= f.input :address_zip %>
    <%= f.input :phone %>
    <%= f.hidden_field :employee_id, :as => :integer, value: @employee_id %>
    <%= f.submit %>
<% end %>